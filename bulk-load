#!/bin/bash

# ./bulk-load database hostname synthea_schema cdm_schema user password /path/to/synthea/data /path/to/vocab/data
# ./bulk-load synthea10 synthea.us-east-1.rds.amazonaws.com native cdm_synthea10 postgres lollipop S://Git/Github/synthea/output/csv S://Vocabulary_20181119

DB=$1
HOSTNAME=$2
NATIVE=$3
CDM=$4
USERNAME=$5
PASSWORD=$6
DATA_DIRECTORY=$7
VOCAB_DIRECTORY=$8 


CONN_STRING="postgresql://$USERNAME:$PASSWORD@$HOSTNAME/$DB"


echo "creating synthea tables"
psql -c "CREATE SCHEMA $NATIVE" $CONN_STRING
PGOPTIONS="--search_path=$NATIVE" psql -f "ETL/SQL/synthea_ddl.sql" $CONN_STRING 

echo "creating cdm tables"
psql -c "CREATE SCHEMA $CDM" $CONN_STRING
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/drop_cdm_tables.sql" $CONN_STRING 
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/cdm_v5.3_ddl.sql" $CONN_STRING 

echo "loading data from synthea csv files to relational database"
for TABLE in allergies careplans conditions encounters immunizations medications observations patients procedures
do
PGOPTIONS="--search_path=$NATIVE" psql -c "\copy $TABLE from '$DATA_DIRECTORY/$TABLE.csv' CSV HEADER" $CONN_STRING 
done

echo "loading data from vocab csv files to relational database"
for TABLE in CONCEPT CONCEPT_ANCESTOR CONCEPT_RELATIONSHIP CONCEPT_CLASS CONCEPT_SYNONYM DOMAIN DRUG_STRENGTH RELATIONSHIP VOCABULARY
do
PGOPTIONS="--search_path=$CDM" psql -c "\copy $TABLE from '$VOCAB_DIRECTORY/$TABLE.csv' CSV DELIMITER E'\t' QUOTE E'\b' HEADER" $CONN_STRING 
done

echo "creating vocab maps..."

PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/create_source_to_source_vocab_map.sql" $CONN_STRING

PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/create_source_to_standard_vocab_map.sql" $CONN_STRING

echo "creating visit logic tables..."

PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/AllVisitTable.sql" $CONN_STRING

PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/AAVITable.sql" $CONN_STRING

PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/final_visit_ids.sql" $CONN_STRING

echo "Performing ETL"

# echo "Loading location"
# PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_location.sql" $CONN_STRING 

echo "Loading person"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_person.sql" $CONN_STRING 

# echo "Loading death"
# PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_death.sql" $CONN_STRING 

echo "Loading observation_period"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_observation_period.sql" $CONN_STRING 

echo "Loading visit_occurrence"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_visit_occurrence.sql" $CONN_STRING 

echo "Loading observation"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_observation.sql" $CONN_STRING 

echo "Loading condition_occurrence"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_condition_occurrence.sql" $CONN_STRING 

echo "Loading procedure_occurrence"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_procedure_occurrence.sql" $CONN_STRING 

echo "Loading measurement"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_measurement.sql" $CONN_STRING 

echo "Loading drug exposure"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_drug_exposure.sql" $CONN_STRING 

echo "Loading condition_era"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_condition_era.sql" $CONN_STRING 

echo "Loading drug_era"
PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/insert_drug_era.sql" $CONN_STRING 

# PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/cdm_v5.3_indexes_ddl.sql" $CONN_STRING 

# PGOPTIONS="--search_path=$CDM" psql -f "ETL/SQL/cdm_v5.3_constraints_ddl.sql" $CONN_STRING 


# TODO - Either create a staging schema for native Synthea tables or drop the Synthea tables after ETL complete
